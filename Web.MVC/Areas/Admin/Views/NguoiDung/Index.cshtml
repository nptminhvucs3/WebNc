@model IEnumerable<Web.MVC.Models.NguoiDung>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutPage.cshtml";
}
<div style="width: 100%; height: 100%; padding: 10px">
    <h2>Danh Sách Người Dùng</h2>

    <table class="table table-bordered table-striped">
        <tr>
            <th>
                Họ Tên
            </th>
            <th>
                Ảnh
            </th>
            <th>
                Địa Chỉ
            </th>
            <th>
                Giới Tính
            </th>
            <th>
                Ngày Sinh
            </th>
            <th>
                SĐT
            </th>
            <th>
                Tên Tài Khoản
            </th>
            <th>
                Chức Vụ
            </th>
            <th>
                Chức Năng
            </th>

        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Ten)
                </td>
                <td>
                    <img src="@item.Anh" width="100px" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DiaChi)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.GioiTinh)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NgaySinh)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SĐT)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TaiKhoan)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ChucVu1.TenChucVu)
                </td>
                <td>
                    @Html.ActionLink("Sửa", "Update", "NguoiDung", new { id = item.Id }, new { @class = "btn btn-primary" })
                    @Html.ActionLink("Xóa", "Delete", "NguoiDung", new { id = item.Id }, new { @class = "btn btn-danger" })
                </td>
            </tr>
        }

    </table>

    <p>
        @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-success" })
    </p>
</div>